[colors]
background = #282c34
foreground = #FAFAFA
background-alt = #282c34
foreground-alt = #E6E5E5
primary = #265AB1
secondary = #367bf0
alert = #E43030

# DT xmonad colors
cpu-color = #ECBE7B
mem-color = #FF6C6B
update-color = #c678dd
cal-color = #46d9ff
bat-color = #98be65

# Modules from Coffee should work without problems
[bar/mainbar]
monitor = ${env:MONITOR}
width = 100%
height = 24
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = JetBrainsMono Nerd Font:size=11;1
font-1 = FontAwesome:size=11;1
font-2 = Material Icons:size=11;1
font-3 = all\-the\-icons:size=11;1
font-4 = github\-octicons:size=11;1
font-5 = JetBrainsMono Nerd Font:size=11;1
font-6 = Noto Color Emoji:pixelsize=11;1:fontformat=truetype:scale=10:antialias=true;
modules-left = ewmh xwindow
modules-center =
modules-right = cpu memory date hour battery
tray-position = right
tray-padding = 2
tray-maxsize = 24
cursor-click = pointer
cursor-scroll = ns-resize
separator = "|"
separator-foreground = ${colors.foreground-alt}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-foreground = ${colors.foreground-alt}
label-active-background = ${colors.background-alt}
label-active-underline = ${colors.cal-color}
label-occupied = " %name% "
label-occupied-underline = ${colors.cpu-color}
label-urgent = " %name% "
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}
label-urgent-underline  = ${colors.mem-color}
label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " CPU:"
format-prefix-foreground = ${colors.cpu-color}
label = (%percentage:2%%)
label-foreground = ${colors.cpu-color}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " mem:"
format-prefix-foreground = ${colors.mem-color}
label = (%percentage_used%%)
label-foreground = ${colors.mem-color}

#Switch date with date-alt if you preffer the alternative
[module/date]
type = internal/date
date = %b %d %Y (%H:%M)
format =  <label>
format-foreground = ${colors.cal-color}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
; orange denotes charging
format-charging =<label-charging>
label-charging = (%percentage%%)
format-charging-prefix = "AC: "
format-charging-prefix-foreground = ${colors.bat-color}
label-charging-foreground = ${colors.bat-color}

format-discharging-prefix = "BAT: "
format-discharging = <label-discharging>
label-discharging = (%percentage%%)
format-discharging-prefix-foreground = ${colors.bat-color}
label-discharging-foreground = ${colors.bat-color}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

;[global/wm]
;margin-top = 5
;margin-bottom = 5

